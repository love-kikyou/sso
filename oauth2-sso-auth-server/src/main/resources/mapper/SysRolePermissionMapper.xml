<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjs.sso.mapper.SysRolePermissionMapper">
    <resultMap id="sysRolePermissionResultMap" type="com.cjs.sso.entity.SysRolePermission">
        <result column="id" jdbcType="VARCHAR" property="id" />
        <result column="role_id" jdbcType="VARCHAR" property="roleId" />
        <result column="permission_id" jdbcType="VARCHAR" property="permissionId" />
    </resultMap>
    <select id="findByRoleIds" resultMap="sysRolePermissionResultMap">
        SELECT * FROM sys_role_permission WHERE role_id in 
        <foreach collection="list" item="roleId" index="index"
                 open="(" close=")" separator=",">
            #{roleId}
        </foreach>
    </select>
</mapper>
